{
    "editor.fontFamily": "FiraCode Nerd Font Mono",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "workbench.colorTheme": "Gruvbox Dark Hard",
    //"terminal.external.linuxExec": "alacritty",
    "terminal.external.linuxExec": "kitty",
    "terminal.integrated.automationShell.linux": "/bin/zsh",
    "workbench.iconTheme": "material-icon-theme",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    // NeoVim Settings
    "vim.leader": "<space>",
    "vim.easymotion": true,
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "$HOME/.vimrc",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.replace": "underline",
    "vim.cursorStylePerMode.visual": "block",
    "vim.easymotionMarkerForegroundColorOneChar": "#595750",
    "vim.easymotionMarkerBackgroundColor": "#ffbf00",
    "vim.easymotionMarkerForegroundColorTwoCharFirst": "#595750",
    "vim.easymotionMarkerForegroundColorTwoCharSecond": "#595750",
    //NeoVimKeybinding
    "vim.normalModeKeyBindings":[
        {
            "before": ["leader", "w"],
            "commands": [":w"]
        },
    ],
    //Easymotion-s2 -> search 2 caracters to navigate
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "leader", "s"
            ],
            "after": [
                "leader", "leader", "2", "s"
            ]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["i", "i"],
            "after": ["<Esc>"]
        }
    ],
    //NeoVim Airline
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": ["#B8BB26", "#282828"],
    "vim.statusBarColors.insert": "#83A598",
    "vim.statusBarColors.visual": "#FE8019",
    "vim.statusBarColors.visualline": "#FE8019",
    "vim.statusBarColors.visualblock": "#FE8019", 
    "vim.statusBarColors.replace": "#FB4934", 
    "vim.statusBarColors.commandlineinprogress": "#98971A", 
    "vim.statusBarColors.searchinprogressmode": "#FFAF00",
    "vim.statusBarColors.easymotionmode": "#FABD2F",
    "vim.statusBarColors.easymotioninputmode": "#FABD2F",
    "vim.statusBarColors.surroundinputmode": "#98971A",
    "workbench.colorCustomizations": {
        "statusBar.background": "#B8BB26",
        "statusBar.noFolderBackground": "#B8BB26",
        "statusBar.debuggingBackground": "#B8BB26",
        "statusBar.foreground": "#282828",
        "statusBar.debuggingForeground": "#282828"
    },
    //Relative Numbers for Vim extension
    "editor.lineNumbers": "relative",
    //ActivityBar Align to Right
    "workbench.sideBar.location": "right",
}
