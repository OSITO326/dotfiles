{
    // JS TS
    //use eslint to check js and ts
    "tsserver.trace.server": "verbose",
    "javascript.validate.enable": true,
    "typescript.validate.enable": true,

    // JSON
    "json.format.enable": true,

    // HTML
    "html.trace.server": "verbose",
    "html.enable": true,
    "html.format.enable": true,
    "html.suggest.html5": true,
    "html.validate.scripts": true,
    "html.validate.styles": true,
    "html.validate.html": true,

    // CSS
    "css.enable": true,
    //Css conflicts with hexokinase plugin css 
    "coc.preferences.colorSupport": false,

    // C#
    "omnisharp.trace.server": "verbose",
    "omnisharp.debug.server": true,

    // ESLint
    "eslint.trace.server": "verbose",
    "eslint.packageManager": "npm",
    "eslint.autoFixOnSave": true,
    "eslint.probe": [ "javascript", "javascriptreact", "typescript", "typescriptreact", "html", "vue", "markdown" ],
    "eslint.run": "onSave",
    "eslint.options": {
        "env": {
            "browser": true,
            "node": true
        }
    },
    
    //java
    "java.enabled": true,
    "java.trace.server": "verbose",
   	"java.errors.incompleteClasspath.severity": "ignore",
    "java.home": "/usr/lib/jvm/java-14-openjdk-amd64",
    "java.import.gradle.enabled": true,
    "java.import.gradle.wrapper.enable": true,
    "java.import.gradle.home": "/home/osito/.gradle",
    "java.completion.enabled": true,
    "java.completion.guessMethodArguments": true,
    "java.format.enabled": true,

    "java.configuration.runtimes":[
        {
            "name": "JavaSE-14",
            "path": "/usr/lib/jvm/java-14-openjdk",
            "default": true
        }
    ],
    }
