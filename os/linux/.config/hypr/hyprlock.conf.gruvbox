source = $HOME/.config/hypr/gruvbox.conf

$accent = $gruvboxPurple
$accentAlpha = $gruvboxPurpleAlpha
$font = JetBrainsMono Nerd Font

# GENERAL
general {
    disable_loading_bar = true
    hide_cursor = true
}

# BACKGROUND
background {
    monitor =
    path = ~/Pictures/Wallpapers/RickAndMorty4.png   # only png supported for now
    blur_passes = 2
    color = $gruvboxBg0
}

# TIME
label {
    monitor =
    text = cmd[update:30000] echo "$(date +"%R")"
    color = $gruvboxFg0
    font_size = 90
    font_family = $font
    position = -30, 0
    halign = right
    valign = top
}

# DATE 
label {
    monitor = 
    text = cmd[update:43200000] echo "$(date +"%A, %d %B %Y")"
    color = $gruvboxFg0
    font_size = 25
    font_family = $font
    position = -30, -150
    halign = right
    valign = top
}

# USER AVATAR
image {
    monitor = 
    path = ~/.face
    size = 100
    border_color = $accent

    position = 0, 75
    halign = center
    valign = center
}

# INPUT FIELD
input-field {
    monitor =
    size = 300, 60
    outline_thickness = 4
    dots_size = 0.2
    dots_spacing = 0.2
    dots_center = true
    outer_color = $accent
    inner_color = $gruvboxBg1
    font_color = $gruvboxFg0
    fade_on_empty = false
    placeholder_text = <span foreground="##$gruvboxFg0Alpha"><i>ó°Œ¾ Logged in as </i><span foreground="##$accentAlpha">$USER</span></span>
    hide_input = false
    check_color = $accent
    fail_color = $gruvboxRed
    fail_text = <i>$FAIL <b>($ATTEMPTS)</b></i>
    capslock_color = $gruvboxYellow
    position = 0, -35
    halign = center
    valign = center
}

